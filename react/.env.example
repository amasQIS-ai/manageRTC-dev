# ==========================================
# manageRTC Frontend - Environment Variables
# ==========================================
# Copy this file to .env and fill in the values
# Note: All React environment variables must start with REACT_APP_

# ------------------------------------------
# Application Configuration
# ------------------------------------------
NODE_ENV=production

# Build timestamp for cache busting
REACT_APP_BUILD_TIMESTAMP=

# ------------------------------------------
# Backend API Configuration
# ------------------------------------------
# Backend API URL (for REST API calls)
# Docker: http://localhost:5000
# Production: https://api.yourdomain.com
REACT_APP_BACKEND_URL=http://localhost:5000

# Alternative API URL (some components use this)
REACT_APP_API_URL=http://localhost:5000/api

# ------------------------------------------
# Socket.IO Configuration
# ------------------------------------------
# Socket.IO server URL (for real-time updates)
# Docker: http://localhost:5000
# Production: wss://api.yourdomain.com
REACT_APP_SOCKET_URL=http://localhost:5000

# Socket.IO connection path (default: /socket.io)
REACT_APP_SOCKET_PATH=/socket.io

# ------------------------------------------
# Application Path Configuration
# ------------------------------------------
# Base path for routing (if deploying to subdirectory)
# Example: /hrms or leave empty for root
REACT_APP_BASE_PATH=

# ------------------------------------------
# Authentication - Clerk
# ------------------------------------------
# Clerk Publishable Key
# Get this from your Clerk Dashboard: https://dashboard.clerk.com
# For Vite builds, use VITE_CLERK_PUBLISHABLE_KEY
# For Create React App, use REACT_APP_CLERK_PUBLISHABLE_KEY
VITE_CLERK_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
REACT_APP_CLERK_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Clerk Frontend API URL (usually auto-detected)
REACT_APP_CLERK_FRONTEND_API=

# ------------------------------------------
# Feature Flags
# ------------------------------------------
# Enable/disable Socket.IO real-time features
REACT_APP_ENABLE_SOCKET_IO=true

# Enable/disable debug mode
REACT_APP_DEBUG=false

# Enable/disable analytics
REACT_APP_ENABLE_ANALYTICS=false

# ------------------------------------------
# UI Configuration
# ------------------------------------------
# Application title
REACT_APP_TITLE=manageRTC

# Application description
REACT_APP_DESCRIPTION=HRMS & Project Management Tool

# Default theme (light, dark, auto)
REACT_APP_DEFAULT_THEME=light

# Default language
REACT_APP_DEFAULT_LANGUAGE=en

# ------------------------------------------
# Pagination Configuration
# ------------------------------------------
# Default page size for tables
REACT_APP_DEFAULT_PAGE_SIZE=20

# Available page size options
REACT_APP_PAGE_SIZE_OPTIONS=10,20,50,100

# ------------------------------------------
# File Upload Configuration
# ------------------------------------------
# Maximum file upload size (in bytes)
# Default: 50MB
REACT_APP_MAX_FILE_SIZE=52428800

# Maximum number of files allowed per upload
REACT_APP_MAX_FILES_PER_UPLOAD=5

# ------------------------------------------
# Session Configuration
# ------------------------------------------
# Session timeout warning time (in milliseconds)
# Default: 5 minutes before expiry
REACT_APP_SESSION_WARNING_TIME=300000

# Auto-refresh token interval (in milliseconds)
# Default: 5 minutes
REACT_APP_TOKEN_REFRESH_INTERVAL=300000

# ------------------------------------------
# External Services (Optional)
# ------------------------------------------
# Google Analytics tracking ID
REACT_APP_GA_TRACKING_ID=

# Sentry DSN for error tracking
REACT_APP_SENTRY_DSN=

# Hotjar tracking ID
REACT_APP_HOTJAR_ID=

# Intercom app ID
REACT_APP_INTERCOM_APP_ID=

# ------------------------------------------
# Map Services (Optional)
# ------------------------------------------
# Google Maps API key (for location features)
REACT_APP_GOOGLE_MAPS_API_KEY=

# OpenWeatherMap API key (for weather widgets)
REACT_APP_OPENWEATHER_API_KEY=

# ------------------------------------------
# Social Media (Optional)
# ------------------------------------------
# Social media links for footer/about page
REACT_APP_FACEBOOK_URL=
REACT_APP_TWITTER_URL=
REACT_APP_LINKEDIN_URL=
REACT_APP_GITHUB_URL=

# ------------------------------------------
# Support Configuration
# ------------------------------------------
# Support email address
REACT_APP_SUPPORT_EMAIL=support@managertc.com

# Documentation URL
REACT_APP_DOCS_URL=https://docs.managertc.com

# Help center URL
REACT_APP_HELP_CENTER_URL=https://help.managertc.com

# ------------------------------------------
# Development Settings
# ------------------------------------------
# Enable React StrictMode
REACT_APP_STRICT_MODE=true

# Enable detailed error messages
REACT_APP_VERBOSE_ERRORS=false

# Mock API responses (for development without backend)
REACT_APP_MOCK_API=false
